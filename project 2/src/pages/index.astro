---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout title="Adidev Jhunjhunwala - Portfolio">
	<main>
		<div class="hero">
			<img 
				src="https://raw.githubusercontent.com/adidevj7/Portfolio/main/assets/Adi-Headshot.png" 
				alt="Adidev Jhunjhunwala"
				class="headshot"
			/>
			<h1>Adidev Jhunjhunwala</h1>
			<p class="tagline">
				"Bringing agile thinking and a broad engineering skillset to design innovative and practical solutions"
			</p>
		</div>
		<Navigation />
	</main>
</Layout>

<style>
	main {
		min-height: 100vh;
	}

	.hero {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		padding: 4rem 2rem;
		text-align: center;
		background: linear-gradient(to bottom, #ffffff, var(--background));
	}

	.headshot {
		width: 200px;
		height: 200px;
		border-radius: 50%;
		object-fit: cover;
		margin-bottom: 2rem;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
	}

	h1 {
		font-size: 2.5rem;
		color: var(--text);
		margin: 0;
		margin-bottom: 1rem;
	}

	.tagline {
		font-size: 1.25rem;
		color: #64748b;
		max-width: 600px;
		line-height: 1.6;
		margin: 0;
	}
</style>